    <servlet>
        <servlet-name>ControleUsuario</servlet-name>
        <servlet-class>controller.ControleUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleRestricoes</servlet-name>
        <servlet-class>controller.ControleRestricoes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControleUsuario</servlet-name>
        <url-pattern>/ControleUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleRestricoes</servlet-name>
        <url-pattern>/ControleRestricoes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            999
        </session-timeout>
