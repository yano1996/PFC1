<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AcessoAdministrativo</filter-name>
        <filter-class>autorizacaoDeAcesso.AcessoAdministrativo</filter-class>
    </filter>
    <filter>
        <filter-name>AcessoLogado</filter-name>
        <filter-class>autorizacaoDeAcesso.AcessoLogado</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AcessoLogado</filter-name>
        <url-pattern>/paginas_adm/*</url-pattern>
        <url-pattern>/paginas_calendarioobr/*</url-pattern>
        <url-pattern>/paginas_paciente/*</url-pattern>
        <url-pattern>/paginas_restricoes/*</url-pattern>
        <url-pattern>/paginas_usuario/*</url-pattern>
        <url-pattern>/paginas_utilitarias/*</url-pattern>
        <url-pattern>/paginas_vacina/*</url-pattern>
       <url-pattern>/ControleUsuario</url-pattern>
       <url-pattern>/ControleRestricoes</url-pattern>
       <url-pattern>/ControleVacina</url-pattern>
       <url-pattern>/ControleVacina_has_restricao</url-pattern>
       <url-pattern>/ControlerCalendarioObr</url-pattern>
        <url-pattern>/ControleVacina</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AcessoAdministrativo</filter-name>
        <url-pattern>/paginas_adm/*</url-pattern>
        <url-pattern>/paginas_restricoes/*</url-pattern>
        <url-pattern>/paginas_vacina/*</url-pattern>
        <url-pattern>/paginas_usuario/*</url-pattern>
    </filter-mapping>
